<html>
  <head>
    <title><%= title %></title>
    <body>
      <header></header>
      <main>
        <section class="log-in-section">
          <form action="/log-in" method="POST">
            <div class="form-group">
              <label for="usernamne">Username: </label>
              <input type="text" id="username" name="username" />
            </div>
            <div class="form-group">
              <label for="password">Password: </label>
              <input
                type="password"
                name="password"
                id="password"
                autocomplete="off"
              />
            </div>
            <div class="button-container">
              <button type="submit">Log In</button>
            </div>
          </form>
        </section>
      </main>
      <% if (flashes.length > 0) { %> <% flashes.forEach(error => { %>
      <span><%= error %></span>
      <% }) %> <% } %>
      <footer></footer>
    </body>
  </head>
</html>
