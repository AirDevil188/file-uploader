<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheet/main.css" />
    <script src="/scripts/dialogControl.js" defer></script>
    <script src="/scripts/elementsClickControl.js" type="module" defer></script>
    <script src="/scripts/toolbarControl.js" type="module" defer></script>
  </head>
  <body>
    <header></header>
    <main>
      <span class="material-symbols-outlined add-file-btn"> add </span>
      <span class="material-symbols-outlined open-button">
        create_new_folder
      </span>
      <%-include('./partials/toolbar') %>
      <section class="menu-buttons">
        <% if (currentFolder.parentId) { %>

        <button>
          <span class="material-symbols-outlined">
            <a href="/drive/<%=currentFolder.parentId%>">arrow_back</a></span
          >
        </button>

        <% } %>
      </section>
      <section class="data-section">
        <%- include('./partials/folder', {currentFolder: currentFolder}) %> <%-
        include('./partials/file', {files: files}) %>
      </section>
      <%- include('./partials/modal', {currentFolder: currentFolder, }) %>
      <%-include('./partials/folder_delete') %> <%-
      include('./partials/upload_modal', {currentFolder: currentFolder}) %>
    </main>
  </body>
  <footer></footer>
</html>
